<?xml version="1.0" encoding="utf-8"?>
<femade.lazyweather.MySlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 一周天气 -->
    <com.zhy.android.percent.support.PercentFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvWeekWeather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/weekWeatherBg"
            app:layout_widthPercent="75%sw" />

    </com.zhy.android.percent.support.PercentFrameLayout>

    <!-- 主界面 -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mainBg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_heightPercent="7%sh">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:iiv_color="@color/md_white"
                app:iiv_icon="ion-navicon"
                app:layout_heightPercent="3%sh"
                app:layout_marginLeftPercent="6%sw"
                app:layout_widthPercent="3%sh" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04.19/周二"
                android:textColor="@color/md_white"
                app:layout_marginLeftPercent="2%sw"
                app:layout_textSizePercent="2.8%sh" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:iiv_color="@color/md_white"
                app:iiv_icon="ion-android-share-alt"
                app:layout_heightPercent="2.6%sh"
                app:layout_marginLeftPercent="6%sw"
                app:layout_widthPercent="2.6%sh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textColor="@color/md_white"
                app:layout_marginLeftPercent="2%sw"
                app:layout_marginRightPercent="6%sw"
                app:layout_textSizePercent="2.8%sh" />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 天气部分 -->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainBg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.86"
                        android:text="晴间\n多云"
                        android:textColor="@color/md_white"
                        android:textStyle="bold"
                        app:layout_marginBottomPercent="12%sh"
                        app:layout_marginTopPercent="18%sh"
                        app:layout_textSizePercent="14%sh" />

                    <!-- actions start -->

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_heightPercent="33%sh">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:iiv_color="@color/md_white"
                                app:iiv_icon="ion-ios-rainy-outline"
                                app:layout_heightPercent="12%sh"
                                app:layout_widthPercent="12%sh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="中雨"
                                android:textColor="@color/md_white"
                                app:layout_textSizePercent="3%sh" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:iiv_color="@color/md_white"
                                app:iiv_icon="ion-arrow-graph-up-right"
                                app:layout_heightPercent="12%sh"
                                app:layout_widthPercent="12%sh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="股市走高"
                                android:textColor="@color/md_white"
                                app:layout_textSizePercent="3%sh" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_heightPercent="33%sh">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:iiv_color="@color/md_white"
                                app:iiv_icon="ion-android-walk"
                                app:layout_heightPercent="12%sh"
                                app:layout_widthPercent="12%sh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="雨中漫步"
                                android:textColor="@color/md_white"
                                app:layout_textSizePercent="3%sh" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:iiv_color="@color/md_white"
                                app:iiv_icon="ion-connection-bars"
                                app:layout_heightPercent="12%sh"
                                app:layout_widthPercent="12%sh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="信号良好"
                                android:textColor="@color/md_white"
                                app:layout_textSizePercent="3%sh" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_heightPercent="33%sh">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikepenz.iconics.view.IconicsImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:iiv_color="@color/md_white"
                                app:iiv_icon="ion-plus-round"
                                app:layout_heightPercent="12%sh"
                                app:layout_widthPercent="12%sh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="添加更多"
                                android:textColor="@color/md_white"
                                app:layout_textSizePercent="3%sh" />

                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <!-- actions end -->

                </com.zhy.android.percent.support.PercentLinearLayout>


                <!-- cloths start -->

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_white"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingBottom="30dp"
                    android:paddingRight="16dp">

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_heightPercent="14%sh">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="女装"
                            android:textColor="@color/md_white"
                            app:layout_textSizePercent="3.0%sh"
                            app:layout_widthPercent="22%sw" />

                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/md_grey_600"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="男装"
                            android:textColor="@color/md_white"
                            app:layout_textSizePercent="3.0%sh"
                            app:layout_widthPercent="22%sw" />

                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/ivCloth"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_heightPercent="70%sh" />

                        <TextView
                            android:id="@+id/temp"
                            android:textColor="@color/md_white"
                            android:text="19°"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:background="@color/md_amber_200"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|right"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            />

                    </com.zhy.android.percent.support.PercentFrameLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>

                <!-- cloths end -->

            </com.zhy.android.percent.support.PercentLinearLayout>

        </ScrollView>

    </com.zhy.android.percent.support.PercentLinearLayout>

</femade.lazyweather.MySlidingPaneLayout>
