<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 一周天气 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvWeekWeather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/weekWeatherBg"
        android:visibility="invisible"
        app:layout_widthPercent="75%sw" />

    <!-- 主界面 -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mainBg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_heightPercent="7%sh">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:iiv_color="@color/md_white"
                app:iiv_icon="faw-bars"
                app:layout_heightPercent="3%sh"
                app:layout_marginLeftPercent="6%sw"
                app:layout_widthPercent="3%sh" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="04.19/周二/谷雨"
                android:textColor="@color/md_white"
                app:layout_marginLeftPercent="2%sw"
                app:layout_textSizePercent="2.8%sh" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:iiv_color="@color/md_white"
                app:iiv_icon="faw-share-alt"
                app:layout_heightPercent="3%sh"
                app:layout_marginLeftPercent="6%sw"
                app:layout_widthPercent="3%sh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textColor="@color/md_white"
                app:layout_marginLeftPercent="2%sw"
                app:layout_marginRightPercent="6%sw"
                app:layout_textSizePercent="2.8%sh" />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 天气部分 -->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2000px"
                    android:background="@color/mainBg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.86"
                        android:text="晴间\n多云"
                        android:textColor="@color/md_white"
                        android:textStyle="bold"
                        app:layout_heightPercent="70%sh"
                        app:layout_textSizePercent="14%sh" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <!-- 其他 todo -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2000px"
                    android:background="@color/md_white" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </ScrollView>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentFrameLayout>
